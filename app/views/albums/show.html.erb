<div class="container">
  <div class="album-header">
    <h1><%= @album.title %></h1>
    <p><%= @album.description %></p>
    <div class="album-header-actions">
      <%= link_to 'Edit', edit_album_path(@album) %> |
      <%= link_to 'Back', albums_path %>
      <%= button_to "Delete this album", @album, method: :delete %>
    </div>
  </div>

  <div class="album-photos">
    <% @album.album_photos.order("created_at DESC").each do |album_photos| %>
      <div class="album-photo">
        <%= link_to image_tag(album_photos.variant(resize_to_fill: [150, 150]), alt: album_photos.filename.to_s), album_photos, target: "_blank"%>

        <div class="album-photo-actions" style="padding: 8px;text-align: center;font-size: 0.7em">
          <%= link_to "Download", album_photos, target: "_blank" %>
          <%= button_to 'Delete', delete_album_photos_album_url(album_photos), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
